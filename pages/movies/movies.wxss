.movies-container {
  background-color: #f2f2f2;
}

.search {
  display: flex;
  flex-direction: row;
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
}

.search input {
  width: 600rpx;
  height: 100%;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.search-img {
  margin: auto 0 auto 20rpx;
}
.cancel-img{
  margin: auto 20rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search-container {
  margin-top: 80rpx;
}
