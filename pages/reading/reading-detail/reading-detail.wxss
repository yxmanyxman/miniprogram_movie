.detail-container {
  display: flex;
  flex-direction: column;
}
.detail-img {
  width: 100%;
  height: 460rpx;
}
.detail-author {
  flex-direction: row;
  margin: 20rpx 0 0 30rpx;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.publish-by {
  color: #999;
  margin-left: 20rpx;
}
.publish-time {
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title {
  margin: 30rpx 0 0 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool {
  margin-top: 20rpx;
}
.tool-icon {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.share-icon {
  margin-left: 30rpx;
}
.tool-icon image {
  width: 90rpx;
  height: 90rpx;
}
.line {
  position: relative;
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.content {
  color: #666;
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
.music {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.7;
}