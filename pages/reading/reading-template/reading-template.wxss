.post-container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-data {
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author-avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 20rpx;
}
.post-image {
  width: 100%;
  height: 350rpx;
  margin: auto 0;
  margin-bottom: 10px;
}
.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 0 10px 20rpx 20rpx;
  letter-spacing: 0.8rpx;
  line-height: 40rpx;
  text-align: justify;
}
.post-comment {
  font-size: 13px;
  flex-direction: row; 
  margin-left: 20rpx;
}
.post-comment-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-comment-num {
  margin-right: 20px;
  vertical-align: middle;
}