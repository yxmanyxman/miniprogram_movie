/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
button {
  background-color: #b3d4db;
  color: #405f80;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 140rpx 0 10rpx 0;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 36rpx;
}

.usermotto {
  margin-top: 200px;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}
.user-motto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;  
}
page {
  height: 100%;
  background-color: #b3d4db;
}
